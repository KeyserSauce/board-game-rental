<div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url( <%= image_path('banner.jpg') %> );">
      <div class="banner-content">
        <h1>Board Game Rental</h1>
        <p>Play games you love or try out new ones</p>

        <div class="search-form-banner">
          <%= form_tag(results_path, :method => "get", id: "search-form-for-banner") do %>
          <%= text_field_tag 'search', nil, placeholder: "Search for a game", id: "primary-search"  %>
          <%= submit_tag "Search", class: "btn btn-primary"%>
          <% end %>
        </div>
      </div>
    </div>
