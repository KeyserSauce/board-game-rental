<div class="panel space-4 profile-card">
  <% unless games.empty? %>
    <div class="panel-header">
      <strong> <%= header %> </strong>
    </div>
    <div class="panel-body">
      <% games.each do |rental| %>
        <div class="col-md-4 margined">
          <%= link_to game_path(rental.game) do %>
            <div class="card-index" style="background-image: url('<%= cl_image_path rental.game.photo.path %>')">
            </div>
            <div>
              <p> <strong> <%= rental.game.name %> </strong> </p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
