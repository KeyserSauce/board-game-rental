<div class="container">
  <div class="row col-sm-offset-4 col-sm-4">
    <h1>List a new game</h1>

    <%= simple_form_for @game do |f| %>

      <%= f.input :name %>
      <%= f.input :category, collection: Game::CATEGORIES, prompt: "Pick Category" %>
      <%= f.input :price %>
      <%= f.input :url, placeholder: 'wikipedia.org/Monopoly', label: 'Wikipedia URL'%>

      <%= f.input :photo, as: :attachinary %>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>

  </div>
</div>



